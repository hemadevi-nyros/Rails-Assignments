<% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
<% end %>
<div class="container my_card">
 <div class="col-md-6 col-md-offset-3">
    <div class="card">
      <div class="card-header">
        <%= link_to 'Log in', sessions_new_path, class: 'btn btn-primary' %>
      </div>
      <div class="card-body">
        <div class="col-md-12 mx-auto">
           <%= form_tag sessions_path do %>
              <div class="form-group">
                <%= label_tag :email %><br />
                <%= text_field_tag :email %>
             </div>
             <div class="form-group">
                <%= label_tag :password %><br />
               <%= password_field_tag :password %>
             </div>
             <div class="form-group">
               <%= submit_tag "Log in", class: 'btn btn-primary' %> <p>Create a new account <%= link_to "Sign up", sign_up_path %> </p>
             </div>
           <% end %>
       </div>
     </div>
    </div>
  </div>
</div>
